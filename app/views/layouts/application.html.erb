<!DOCTYPE html>
<html>
  <head>
    <title>FlapperNews</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body ng-app="flapperNews">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
       <ui-view></ui-view>
      </div>
    </div>
    <script type="text/ng-template" id="/home.html">
        <div class="page-header">
          <h1>Flapper News</h1>
        </div>
        <div ng-repeat="post in posts | orderBy: '-upvotes'">
          <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpVote(post)"></span>
          <span style="font-size:20px; margin-left:10px;">
            <a ng-show="post.link" href="{{post.link}}">
            {{post.title}}
            </a>
            <span ng-hide="post.link">
              {{post.title}}
            </span>
            <span><a href='#posts/{{$index}}'>Comments</a></span>
             - upvotes: {{post.upvotes}}
          </span>
        </div>

        <form style= "margin-top:30px;" ng-submit="addPost()">
          <h3>Add New Post</h3>
          <div class="form-group">
            <input type="text" class="form-control" ng-model="title" placeholder="Enter Title"></input>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" ng-model="link" placeholder="Enter Link"></input>
          </div>
          <button type="submit" class="btn btn-primary">Create Post</button>
        </form>
    </script>
    <script type="text/ng-template" id="/posts.html">
      <div class="page-header">
        <h3>
          <a ng-show="post.link" href="{{post.link}}">
            {{post.title}}
          </a>
          <span ng-hide="post.link">
            {{post.title}}
          </span>
        </h3>
      </div>

      <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
        <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpVote(comment)">
        </span>
        {{comment.upvotes}} - by {{comment.author}}
        <span style="font-size:20px; margin-left:10px;">
          {{comment.body}}
        </span>
      </div>
      <form ng-submit="addComment()" style="margin-top: 30px;">
        <h3>Add a new comment</h3>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Comment" ng-model="body">
        </div>
        <button type="submit" class="btn btn-success">Comment</button>
      </form>
    </script>
  </body>
</html>
